#============== Aneufinder configuration file ===============#

[General]
numCPU  =  1 
reuse.existing.files  =  TRUE 

[Binning]
binsizes  =  c(2e+05,5e+05) 
reads.per.bin  =  NULL 
format  =  'bam' 
chromosomes  =  NULL 
remove.duplicate.reads  =  TRUE 
min.mapq  =  10 

[Correction]
correction.method  =  'GC'
GC.bsgenome = 'BSgenome.Hsapiens.UCSC.hg19'
# GC.bsgenome = 'BSgenome.Mmusculus.UCSC.mm10'

[HiddenMarkov]
callCNVs  =  TRUE 
callSCEs  =  FALSE 
eps  =  0.1 
max.time  =  60 
max.iter  =  5000 
num.trials  =  15 
states  =  c('zero-inflation','nullsomy','monosomy','disomy','trisomy','tetrasomy','multisomy') 
most.frequent.state  =  'disomy' 
most.frequent.state.SCE  =  'monosomy' 

[Plotting]
cluster.plots  =  TRUE 
